"""
Production settings for {{{projectName}}} project.
Database extension enabled - uses dj-database-url.
"""

from .base import *
import os
import secrets
import dj_database_url

# SECURITY WARNING: keep the secret key used in production secret!
# Generate a secure random key - in production, use environment variable or secrets manager
SECRET_KEY = os.getenv('DJANGO_SECRET_KEY', secrets.token_urlsafe(50))

# SECURITY WARNING: don't run with debug turned on in production!
DEBUG = False

# Production hosts - includes localhost for health checks from ALB
# Additional hosts can be added via DJANGO_ALLOWED_HOSTS environment variable (comma-separated)
ALLOWED_HOSTS = [
    'localhost',
    '127.0.0.1',
    '{{{projectName}}}-api.{{{domain}}}',
    '{{{projectName}}}-api-prod.{{{domain}}}',
]

# Allow additional hosts from environment variable
extra_hosts = os.getenv('DJANGO_ALLOWED_HOSTS', '')
if extra_hosts:
    ALLOWED_HOSTS.extend([h.strip() for h in extra_hosts.split(',') if h.strip()])

# Database - Uses PYTHON_DRF_DATABASE_URL environment variable via dj-database-url
# MUST be configured via environment variable for production
DATABASE_URL = os.environ.get('PYTHON_DRF_DATABASE_URL')
if not DATABASE_URL:
    raise ValueError("PYTHON_DRF_DATABASE_URL environment variable must be set for production")

DATABASES = {
    'default': dj_database_url.parse(
        DATABASE_URL,
        conn_max_age={{connectionPoolSize}},
        conn_health_checks=True,
    )
}

# CORS settings - Production frontend origins
CORS_ALLOWED_ORIGINS = [
    'https://{{{projectName}}}.{{{domain}}}',
    'https://{{{projectName}}}-prod.{{{domain}}}',
]

CORS_ALLOW_CREDENTIALS = True

# Security settings for running behind ALB/proxy
# SECURE_PROXY_SSL_HEADER tells Django to trust the X-Forwarded-Proto header from ALB
SECURE_PROXY_SSL_HEADER = ('HTTP_X_FORWARDED_PROTO', 'https')

# Disable SECURE_SSL_REDIRECT when behind ALB - ALB handles HTTPS termination
# ALB forwards requests as HTTP internally, so Django shouldn't redirect again
SECURE_SSL_REDIRECT = False

SESSION_COOKIE_SECURE = True
CSRF_COOKIE_SECURE = True
SECURE_BROWSER_XSS_FILTER = True
SECURE_CONTENT_TYPE_NOSNIFF = True
X_FRAME_OPTIONS = 'DENY'
