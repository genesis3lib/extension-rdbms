# Docker Compose for Local Development
# Generated by Genesis3 - extension-rdbms module (DRF)

services:
{{#isPostgreSQL}}
  postgres:
    image: postgres:16-alpine
    container_name: {{{projectName}}}-postgres
    environment:
      POSTGRES_DB: {{{projectName}}}
      POSTGRES_USER: {{{projectName}}}_user
      POSTGRES_PASSWORD: localdev
    ports:
      - "5432:5432"
    volumes:
      - postgres_data:/var/lib/postgresql/data
    healthcheck:
      test: ["CMD-SHELL", "pg_isready -U {{{projectName}}}_user -d {{{projectName}}}"]
      interval: 5s
      timeout: 5s
      retries: 10
{{/isPostgreSQL}}
{{#isMySQL}}
  mysql:
    image: mysql:8.0
    container_name: {{{projectName}}}-mysql
    environment:
      MYSQL_DATABASE: {{{projectName}}}
      MYSQL_USER: {{{projectName}}}_user
      MYSQL_PASSWORD: localdev
      MYSQL_ROOT_PASSWORD: localdev
    ports:
      - "3306:3306"
    volumes:
      - mysql_data:/var/lib/mysql
    healthcheck:
      test: ["CMD", "mysqladmin", "ping", "-h", "localhost", "-u", "root", "-plocaldev"]
      interval: 5s
      timeout: 5s
      retries: 10
{{/isMySQL}}
{{#isMariaDB}}
  mariadb:
    image: mariadb:11
    container_name: {{{projectName}}}-mariadb
    environment:
      MARIADB_DATABASE: {{{projectName}}}
      MARIADB_USER: {{{projectName}}}_user
      MARIADB_PASSWORD: localdev
      MARIADB_ROOT_PASSWORD: localdev
    ports:
      - "3306:3306"
    volumes:
      - mariadb_data:/var/lib/mysql
    healthcheck:
      test: ["CMD", "mariadb-admin", "ping", "-h", "localhost", "-u", "root", "-plocaldev"]
      interval: 5s
      timeout: 5s
      retries: 10
{{/isMariaDB}}

  # Backend database configuration (merges with code-drf backend service)
  backend:
    environment:
{{#isPostgreSQL}}
      - DATABASE_URL=postgresql://{{{projectName}}}_user:localdev@postgres:5432/{{{projectName}}}
{{/isPostgreSQL}}
{{#isMySQL}}
      - DATABASE_URL=mysql://{{{projectName}}}_user:localdev@mysql:3306/{{{projectName}}}
{{/isMySQL}}
{{#isMariaDB}}
      - DATABASE_URL=mysql://{{{projectName}}}_user:localdev@mariadb:3306/{{{projectName}}}
{{/isMariaDB}}
    depends_on:
{{#isPostgreSQL}}
      postgres:
        condition: service_healthy
{{/isPostgreSQL}}
{{#isMySQL}}
      mysql:
        condition: service_healthy
{{/isMySQL}}
{{#isMariaDB}}
      mariadb:
        condition: service_healthy
{{/isMariaDB}}

volumes:
{{#isPostgreSQL}}
  postgres_data:
{{/isPostgreSQL}}
{{#isMySQL}}
  mysql_data:
{{/isMySQL}}
{{#isMariaDB}}
  mariadb_data:
{{/isMariaDB}}
